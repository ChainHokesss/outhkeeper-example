      "preserve_host": true,
      "url": "https://recruitment-cacebe676dd0.herokuapp.com/"
    },
    "match": {
      "url": "http://<127.0.0.1|localhost>:10000/<{api/docs,openapi.json}>",
      "methods": ["GET"]
    },
    "authenticators": [
