    "upstream": {
      "preserve_host": true,
      "url": "https://recruitment-cacebe676dd0.herokuapp.com/"
    },
    "match": {
      "url": "http://<127.0.0.1|localhost>:10000/api/v1/<**>",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    "authenticators": [
      {
        "handler": "cookie_session"
